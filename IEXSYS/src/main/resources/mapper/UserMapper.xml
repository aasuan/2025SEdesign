<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.exp.iexsys.mapper.UserMapper">

    <resultMap id="UserResultMap" type="org.exp.iexsys.domain.User">
        <id property="id" column="user_id"/>
        <result property="username" column="username"/>
        <result property="password" column="password_hash"/>
        <result property="realName" column="real_name"/>
        <result property="email" column="email"/>
        <result property="phone" column="phone_number"/>
        <result property="userRole" column="user_role"/>
        <result property="status" column="status"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <sql id="BaseColumns">
        user_id, username, password_hash, real_name, email, phone_number, user_role, status, created_at, updated_at
    </sql>

    <select id="selectById" parameterType="long" resultMap="UserResultMap">
        SELECT
        <include refid="BaseColumns"/>
        FROM user
        WHERE user_id = #{id}
    </select>

    <select id="selectByUsername" parameterType="string" resultMap="UserResultMap">
        SELECT
        <include refid="BaseColumns"/>
        FROM user
        WHERE username = #{username}
    </select>

    <select id="selectByEmail" parameterType="string" resultMap="UserResultMap">
        SELECT
        <include refid="BaseColumns"/>
        FROM user
        WHERE email = #{email}
    </select>

    <select id="selectByPhone" parameterType="string" resultMap="UserResultMap">
        SELECT
        <include refid="BaseColumns"/>
        FROM user
        WHERE phone_number = #{phone}
    </select>

    <insert id="insert" parameterType="org.exp.iexsys.domain.User" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user (username, password_hash, real_name, email, phone_number, user_role, status)
        VALUES (#{username}, #{password}, #{realName}, #{email}, #{phone}, #{userRole}, 'Active')
    </insert>

    <update id="updatePhone">
        UPDATE user
        SET phone_number = #{phone}, updated_at = NOW()
        WHERE user_id = #{id}
    </update>
</mapper>

